  },
  "lint-staged": {
    "*.css": [
      "prettier --write",
      "git add"
    ],
    "*.scss": [
      "prettier --write",
      "git add"
    ],
    "*.js": [
      "prettier --write",
      "git add"
    ],
    "*.tsx?": [
      "prettier --parser=typescript --write",
      "git add"
    ],
    "*.vue": [
      "prettier --write",
      "git add"
    ]
  }
